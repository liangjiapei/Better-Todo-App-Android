<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liangjiapei.bettertodoapp.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_todo_list"
        android:layout_width="match_parent"
        android:layout_above="@+id/btn_add_todo"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
         />

    <EditText
        android:id="@+id/et_new_todo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Add new todo here..."
        android:layout_alignTop="@+id/btn_add_todo"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btn_add_todo"
        android:layout_toStartOf="@+id/btn_add_todo"
        android:layout_alignParentBottom="true"
        />

    <Button
        android:id="@+id/btn_add_todo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:onClick="onAddItem"
        android:text="Add" />


</RelativeLayout>
